{% extends "EshopBundle::layout.html.twig" %}

{% block body %}


    <h3>Ajouter un produit</h3>


    <div class="well">

        {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}

        {{ form_errors(form) }}
        <div class="form-group">

            {{ form_label(form.title, "Titre de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.title) }}


            <div class="col-sm-4">

                {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}

            </div>

        </div>
        <div class="form-group">

            {{ form_label(form.content, "Contenu de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.title) }}

            <div class="col-sm-4">

                {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}

            </div>

        </div>

        <div class="form-group">

            {{ form_label(form.abstract, "Extrait de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.title) }}

            <div class="col-sm-4">

                {{ form_widget(form.abstract, {'attr': {'class': 'form-control'}}) }}

            </div>

        </div>

        <div class="form-group">

            {{ form_label(form.datetime, "Date de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.title) }}

            <div class="col-sm-4">

                {{ form_widget(form.datetime, {'attr': {'class': 'form-control'}}) }}

            </div>

        </div>
        <div class="form-group">

            {{ form_label(form.price, "Prix de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.title) }}

            <div class="col-sm-4">

                {{ form_widget(form.price, {'attr': {'class': 'form-control'}}) }}

            </div>

        </div>

        <div class="form-group">

            {{ form_label(form.status, "Publié de l'annonce", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

            {{ form_errors(form.title) }}

            <div class="col-sm-4">

                {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}

            </div>

        </div>


        {{ form_rest(form) }}

        {{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}

        {{ form_end(form) }}

    </div>


{% endblock %}

